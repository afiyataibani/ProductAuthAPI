<%- include('../partials/header') %>
  <div class="page-wrapper">
    <div class="page-breadcrumb">
      <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
          <h4 class="page-title">Add To Cart</h4>
          <div class="ms-auto text-end">
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Cart</a></li>
                <li class="breadcrumb-item active" aria-current="page">
                  View Cart
                </li>
              </ol>
            </nav>
          </div>
        </div>
      </div>
    </div>
    <div class="container-fluid">
      <div class="row">
        <div class="col-xl-12">
          <div class="card">
            <div class="card-header">
              <div class="card-title">View Cart Details</div>
            </div>
            <div class="card-body">
              <% if (cart.length> 0) { %>
                <table class="table table-hover text-center">
                  <thead>
                    <tr>
                      <th scope="col">SR No.</th>
                      <th scope="col">Product</th>
                      <th scope="col">Price</th>
                      <th scope="col">Quantity</th>
                      <th scope="col">Total</th>
                    </tr>
                  </thead>
                  <% let count=0; cart.forEach(item=> { %>
                    <% if (item.productId) { %>
                      <tr>
                        <td>
                          <%= ++count %>
                        </td>
                        <td>
                          <%= item.productId.name %>
                        </td>
                        <td><i class="fas fa-rupee-sign"></i>
                          <%= item.productId.price %>
                        </td>
                        <td>
                          <%= item.quantity %>
                        </td>
                        <td><i class="fas fa-rupee-sign"></i>
                          <%= item.productId.price * item.quantity %>
                        </td>
                      </tr>
                      <% } %>
                        <% }); %>
                          <% if (count===0) { %>
                            <p>Your cart is empty.</p>
                            <% } %>
                              </tbody>
                </table>
                <% } else { %>
                  <p>Your cart is empty.</p>
                  <% } %>
            </div>
          </div>
          <div class="text-center">
            <a href="/product/view-product" class="btn btn-primary fs-5">Continue Shopping <i
                class="fas fa-angle-right"></i></a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include('../partials/footer.ejs')%>